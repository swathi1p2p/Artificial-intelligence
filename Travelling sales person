from itertools import permutations
def calculate_total_distance(graph, path):
    total_distance = 0
    for i in range(len(path) - 1):
        total_distance += graph[path[i]][path[i + 1]]
    total_distance += graph[path[-1]][path[0]]  # Return to the start
    return total_distance
def tsp_bruteforce(graph):
    num_cities = len(graph)
    cities = list(range(num_cities))
    all_paths = permutations(cities)
    min_path = None
    min_distance = float('inf')
    for path in all_paths:
        current_distance = calculate_total_distance(graph, path)
        if current_distance < min_distance:
            min_distance = current_distance
            min_path = path
    return min_path, min_distance
if __name__ == "__main__":
    graph = [
        [0, 10, 15, 20],
        [10, 0, 35, 25],
        [15, 35, 0, 30],
        [20, 25, 30, 0]
    ]
    best_path, best_distance = tsp_bruteforce(graph)
    print("Best path:", best_path)
    print("Minimum distance:", best_distance)


output
Best path: (0, 1, 3, 2)
Minimum distance: 80
